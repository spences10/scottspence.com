{
	"name": "scottspence.com",
	"private": true,
	"author": {
		"name": "Scott Spence",
		"email": "yo@scottspence.dev",
		"url": "https://scottspence.com"
	},
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"start": "node ./build/index.js",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test:server": "vitest --project=server",
		"test:client": "vitest --project=client",
		"test:ssr": "vitest --project=ssr",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"test:ui": "vitest --ui",
		"test:ci": "vitest run",
		"cspell": "cspell '**/*.md' --config cspell.json --wordsOnly",
		"coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.30.1",
		"@fontsource-variable/manrope": "^5.2.6",
		"@fontsource-variable/victor-mono": "^5.2.6",
		"@fontsource/comic-neue": "^5.2.6",
		"@fontsource/victor-mono": "^5.2.6",
		"@playwright/test": "^1.53.2",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/typography": "0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@types/nodemailer": "^6.4.17",
		"@upstash/ratelimit": "^2.0.5",
		"@upstash/redis": "^1.35.1",
		"@vitest/browser": "^3.2.4",
		"cspell": "^9.1.3",
		"daisyui": "5.0.43",
		"date-fns": "4.1.0",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"fathom-client": "3.7.2",
		"globals": "^16.3.0",
		"marked": "15.0.12",
		"mdsvex": "^0.12.3",
		"mdsvex-relative-images": "1.0.3",
		"nodemailer": "^7.0.4",
		"playwright": "^1.53.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.13",
		"rehype-autolink-headings": "7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-slug": "6.0.0",
		"remark-preview": "1.0.3",
		"slugify": "1.6.6",
		"svead": "^0.0.13",
		"svelte": "^5.35.2",
		"svelte-check": "^4.2.2",
		"sveltekit-embed": "^0.0.22",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"unist-util-visit": "5.0.0",
		"vite": "^6.3.5",
		"vitest": "^3.2.4",
		"vitest-browser-svelte": "^1.0.0"
	},
	"dependencies": {
		"@libsql/client": "^0.15.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"esbuild"
		]
	}
}