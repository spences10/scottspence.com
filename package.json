    "@types/marked": "^4.0.8",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "@vitest/ui": "^0.29.3",
    "autoprefixer": "10.4.14",
    "cspell": "^6.30.2",
    "cssnano": "5.1.15",
    "daisyui": "2.51.4",
    "date-fns": "2.29.3",
    "eslint": "8.36.0",
