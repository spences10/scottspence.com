    "eslint-plugin-svelte3": "4.0.0",
    "fathom-client": "3.5.0",
    "fuse.js": "6.6.2",
    "graphql": "16.6.0",
    "graphql-request": "5.2.0",
    "husky": "8.0.3",
    "ioredis": "^5.3.1",
    "jsdom": "^21.1.1",
    "marked": "4.2.12",
    "mdsvex": "0.10.6",
    "mdsvex-relative-images": "1.0.3",
    "postcss": "8.4.21",
